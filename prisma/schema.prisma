generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id           Int           @id @default(autoincrement())
  name         String
  address      String?
  lat          Float?
  lon          Float?
  storeFlavors StoreFlavor[]

  @@index([lat, lon]) // Index simple pour les coordonn√©es
}

model Flavor {
  name         String        @id
  image        String?       // URL de l'image
  storeFlavors StoreFlavor[]
}

model StoreFlavor {
  id          Int    @id @default(autoincrement())
  storeId     Int
  flavorName  String
  available   Int @default(0) // 0=non dispo, 1=dispo, 2=plus dispo
  lastUpdated DateTime @default(now())

  store  Store  @relation(fields: [storeId], references: [id])
  flavor Flavor @relation(fields: [flavorName], references: [name])

  @@unique([storeId, flavorName])
}